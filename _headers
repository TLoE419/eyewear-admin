# Cloudflare 緩存控制配置

# API 路由 - 禁用緩存
/api/photos/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# 照片類別 API - 禁用緩存
/api/photos/category/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# 靜態資源 - 允許緩存
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# 圖片資源 - 適度緩存
/public/*
  Cache-Control: public, max-age=3600
